<?php

class Autoloader {
	private $pathway;
	private $ds;
	
	// On instantiation, spl autoload is called.
	function __construct($pathway = "", $ds = "\\") {
		$this->pathway = $pathway;
		if($ds != ' ') $this->ds = $ds;
		spl_autoload_register(array($this, 'mvc_autoloader'));
	}
	
	private function mvc_autoloader($class) {
		$fileName = $this->pathway . $this->ds . strtolower($class) . ".php";   
		if(file_exists($fileName)) include $fileName;
			else die("There is no class definition file for " . $class . "."	);
	}
	
	public function set_pathway($pathway) {  
		$this->pathway = $pathway;	
	}
	
	public function set_divider($ds) {
		if(!isset($ds) || $ds = ' ') die("That is an illegal directory divider.");
			else $this->ds = $ds;
	}
	
	public function get_pathway() {
		return $this->pathway;
	}
	
	public function get_divider() {
		return $this->ds;	
	}
}
?>
