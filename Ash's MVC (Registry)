<?php 

// Class stores all globals and keeps them organized instead of having a namespace containing many globals.
// Methods are simple getter and setter for the lone variable.
// Additions?

class Registry {
	private $vars = array();
	
	public function set_register($name, $data) {
		if(!isset($name) || !isset($data) || $name == ' ') die("Invalid register name.");
		if(array_key_exists($name, $this->vars)) die("There is already a registry entry by the name of {$name}.");
		return $this->vars[$name] = $data;
	}
	
	public function get_register($name) {
		if(!isset($name) || $name == ' ') die("Invalid register name.");	
		if(!array_key_exists($name, $this->vars)) die("No entry by the name of {$name} stored in registry.");
		return $this->vars[$name];
	}
}

?>
